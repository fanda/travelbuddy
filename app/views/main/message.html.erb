<% if @message %>
  <div class="msg" id="msg_<%= @message.id %>">
    <%= image_tag @user.picture_url,
                :class => "i#{@user.facebook_id} tip",
                :title => @user.name,
                :rel => "/friend/facebook/#{@user.facebook_id}" %>
    <div>
      <%=link_to @user.name,facebook_profile_url(@user.facebook_id), :class=>'name', :target => '_blank'%>
      <%=@message.text.html_safe %>
      <br/>
      <small>
        <%= time_ago_in_words @message.created_at, true %> ago
        Â·
        <div class="fb-like" data-send="false" data-layout="button_count" data-width="90" data-show-faces="false" href="<%= root_url %>message/<%= @message.id %>"></div>
      </small>
      <div class="fb_comment_wrap" id="c_<%= @message.id %>">
        <div class="fb-comments" data-href="<%= root_url %>message/<%= @message.id %>" data-num-posts="2" data-width="400"></div>
      </div>
    </div>
    <div class="out"></div>
  </div>
<% end %>
